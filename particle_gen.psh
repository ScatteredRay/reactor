#version 420

layout (rgba32f) uniform image2D particle_buffer;
layout (binding = 0) uniform atomic_uint particle_count;

void main(void)
{
  atomicCounterIncrement(particle_count);
  gl_FragColor = vec4(1.00, 0.00, 0.00, 1.00);
}
